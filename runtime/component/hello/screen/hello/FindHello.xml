<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.6.xsd"
        require-authentication="anonymous-all">
 
    <transition name="findHello"><default-response url="."/></transition>
	<transition name="createHello">
	    <service-call name="create#hello.Hello"/>
	    <default-response url="."/>
	</transition> 

    <actions>
        <entity-find entity-name="hello.Hello" list="helloList">
            <search-form-inputs/></entity-find>
    </actions>
 
    <widgets>
		<container-dialog id="CreateHelloDialog" button-text="Create Hello">
		    <form-single name="CreateHello" transition="createHello">
		        <auto-fields-entity entity-name="hello.Hello" field-type="edit"/>
		        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
		    </form-single>
		</container-dialog>
        <form-list name="ListHello" list="helloList" transition="findHello">
            <auto-fields-entity entity-name="hello.Hello" field-type="display"/>
			<field name="description">
		       <header-field show-order-by="true"><text-find hide-options="true"/></header-field>
		       <default-field><display/></default-field>
		   </field>            
        </form-list>
    </widgets>
</screen>