<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd" default-menu-include="false">
	<!-- set userGroupId so that when an Account is created it will be added to that group -->
	<always-actions>
		<set field="userGroupId" from="HIVE_MIND_USERS" />
	</always-actions>

	<transition name="findStore">
		<default-response url="." />
	</transition>
	<transition name="createStore">
		<actions>
			<service-call name="create#mantle.product.store.ProductStore" in-map="true" />
		</actions>
		<default-response url="../FindStore" />
		<error-response url="." />
	</transition>
	<transition name="editStore">
		<default-response url="../EditStore" />
	</transition>

	<pre-actions>
		<set field="html_title" value="Find Store" />
	</pre-actions>

	<actions>
		<entity-find entity-name="ProductStore" list="productStores">
			<search-form-inputs default-order-by="storeName,address" />
		</entity-find>
	</actions>
	<widgets>
		<container>
			<container-dialog id="FindStoreDialog" button-text="Search Stores" width="700">
				<form-single name="FindStore" transition="findStore">
					<field name="storeName">
						<default-field>
							<text-find />
						</default-field>
					</field>
					<field name="address">
						<default-field>
							<text-find />
						</default-field>
					</field>
					<field name="searchButton">
						<default-field title="Find">
							<submit />
						</default-field>
					</field>
				</form-single>
			</container-dialog>
			<container-dialog id="AddStoreDialog" button-text="Add Store">
				<form-single name="CreateUser" transition="createStore">
					<field name="storeName">
						<default-field>
							<text-line size="15" />
						</default-field>
					</field>
					<field name="address">
						<default-field>
							<text-area cols="60" />
						</default-field>
					</field>
					<field name="latitude">
						<default-field>
							<text-line size="16" format="#0.00" />
						</default-field>
					</field>
					<field name="longitude">
						<default-field>
							<text-line size="16" format="#0.00" />
						</default-field>
					</field>
					<field name="proximityRadius">
						<default-field>
							<text-line size="16" format="#0.00" />
						</default-field>
					</field>
					<field name="submitButton">
						<default-field title="Create Store">
							<submit />
						</default-field>
					</field>
				</form-single>
			</container-dialog>
		</container>
		
		<form-list name="StoreList" list="productStores">
			<field name="storeName">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<link url="editStore" text="${storeName?:'--'}" link-type="anchor" />
				</default-field>
			</field>
			<field name="address">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<display />
				</default-field>
			</field>
			<field name="latitude">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<display />
				</default-field>
			</field>
			<field name="longitude">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<display />
				</default-field>
			</field>
			<field name="proximityRadius">
				<header-field show-order-by="case-insensitive" />
				<default-field>
					<display />
				</default-field>
			</field>
		</form-list>
	</widgets>
</screen>
