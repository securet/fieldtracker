<entity-facade-xml type="seed">
    <moqui.screen.SubscreensItem screenLocation="component://webroot/screen/webroot/apps.xml"
            subscreenName="my" subscreenLocation="component://SimpleScreens/screen/MyAccount.xml"
            menuTitle="My Account" menuIndex="90" menuInclude="Y"/>
    <moqui.screen.SubscreensItem screenLocation="component://webroot/screen/webroot.xml"
            subscreenName="ssstatic" subscreenLocation="component://SimpleScreens/screen/ssstatic.xml"
            menuInclude="N"/>

    <!-- Not needed generally, but here commented for convenience:
    <moqui.screen.SubscreensItem screenLocation="component://webroot/screen/webroot/apps.xml"
            subscreenName="SimpleScreens" subscreenLocation="component://SimpleScreens/screen/SimpleScreens.xml"
            menuTitle="Simple Screens" menuIndex="99" menuInclude="N"/>
    -->

    <!-- Artifact group and authz for My Account App -->
    <artifactGroups artifactGroupId="MY_ACCOUNT" description="My Account App (via root screen)">
        <artifacts artifactName="component://SimpleScreens/screen/MyAccount.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
        <authz artifactAuthzId="MY_ACCOUNT_1" userGroupId="ALL_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
    </artifactGroups>

    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="120" resourceTypeEnumId="STRT_HEADER_NAVBAR_ITEM">
        <resourceValue><![CDATA[
<#if ec.user.userId?has_content>
<div class="btn-group navbar-right">
    <#assign notificationCount = ec.entity.find("moqui.security.user.NotificationMessageUser").condition("userId", ec.user.userId!).condition("viewedDate", "is-null", "").disableAuthz().count()>
    <#assign messageCount = ec.entity.find("mantle.party.communication.CommunicationEvent").condition("toPartyId", ec.user.userAccount.partyId!).condition("statusId", "CeReceived").condition("communicationEventTypeId", "in", "Email,Message,Comment").disableAuthz().count()>
    <#assign eventCount = ec.entity.find("mantle.work.effort.WorkEffortAndParty").condition("partyId", ec.user.userAccount.partyId!).condition("estimatedStartDate", "greater-equals", ec.user.getPeriodRange("week", "")[0]).condition("estimatedStartDate", "less-equals", ec.user.getPeriodRange("week", "")[1]).condition("workEffortTypeEnumId", "WetEvent").conditionDate("", "", ec.user.nowTimestamp).disableAuthz().count()>
    <#assign taskCount = ec.entity.find("mantle.work.effort.WorkEffortAndParty").condition("partyId", ec.user.userAccount.partyId!).condition("statusId", "not-in", "WeClosed,WeCancelled").condition("workEffortTypeEnumId", "WetTask").conditionDate("", "", ec.user.nowTimestamp).disableAuthz().count()>
    <#assign webRoot = ec.web.getWebappRootUrl(false, false)>
    <a href="${webRoot!""}/apps/my/User/Notifications" data-toggle="tooltip" data-container="body" data-original-title="Notifications" data-placement="bottom" class="btn btn-default btn-sm navbar-btn">
        <i class="glyphicon glyphicon-info-sign"></i>
        <span id="navbar_notification_count" class="label label-info">${notificationCount!"0"}</span>
    </a>
    <a href="${webRoot!""}/apps/my/User/Messages/FindMessage?statusId=CeReceived&toPartyId=${ec.user.userAccount.partyId!}" data-toggle="tooltip" data-container="body" data-original-title="Messages" data-placement="bottom" class="btn btn-default btn-sm navbar-btn">
        <i class="glyphicon glyphicon-envelope"></i>
        <span class="label label-warning">${messageCount!"0"}</span>
    </a>
    <a href="${webRoot!""}/apps/my/User/Calendar/MyCalendar" data-toggle="tooltip" data-container="body" data-original-title="Events This Week" data-placement="bottom" class="btn btn-default btn-sm navbar-btn">
        <i class="glyphicon glyphicon-calendar"></i>
        <span class="label label-primary">${eventCount!"0"}</span>
    </a>
    <a href="${webRoot!""}/apps/my/User/Task/MyTasks" data-toggle="tooltip" data-container="body" data-original-title="Open Tasks" data-placement="bottom" class="btn btn-default btn-sm navbar-btn">
        <i class="glyphicon glyphicon-check"></i>
        <span class="label label-success">${taskCount!"0"}</span>
    </a>
</div>
</#if>
<#if ec.factory.serverContainer?has_content>
    <script>
        var navbarNotificationListener = function(jsonObj, webSocket) {
            var countElement = $("#navbar_notification_count");
            countElement.text((parseInt(countElement.text()) + 1).toString());
            notificationClient.displayNotify(jsonObj, webSocket);
        };
        notificationClient.registerListener("ALL", navbarNotificationListener);
    </script>
</#if>
        ]]></resourceValue>
    </moqui.screen.ScreenThemeResource>
</entity-facade-xml>
